<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">




    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:src="@drawable/doctor"
                    android:text="Hello,"


                    android:textColor="?attr/colorOnBackground"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/poppins_medium"
                    android:src="@drawable/doctor"
                    android:textColor="?attr/colorOnBackground"

                    android:textSize="20sp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="300dp"

                    android:layout_marginTop="10dp"
                    android:src="@drawable/p" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"


            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="452dp"
                android:layout_marginStart="-20sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bggg"
                app:cardBackgroundColor="#C462D5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="-30sp"
            android:layout_marginTop="30sp"
            android:background="#094067">

            <TextView
                android:id="@+id/textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Your Certification has been verified, \n Thank you for your service. "
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="80dp"
            android:layout_marginStart="-30sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/ui">

            <TextView
                android:id="@+id/aj"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape"
                android:fontFamily="@font/poppins_semibold"
                android:text="MANAGE"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ajj"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/poppins_semibold"
                android:background="#A8DAFF"
                android:text="My patient >"
                android:gravity="center"
                android:textColor="#094067"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:text="Today's Appointment"
            android:textSize="20sp"
            android:textColor="#094067"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5sp"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/recycler_view1"
            tools:listitem="@layout/paitent_list"
            android:layout_height="200dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</ScrollView>